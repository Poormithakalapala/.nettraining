@model MVCassessment.Models.Customer

<!DOCTYPE html>
<html>
<head>
    <title>Customer Details by Order ID</title>
</head>
<body>
    <h2>Customer Details for Order ID 10248</h2>
    @if (Model != null)
    {
        <table border="1">
            <tr>
                <th>Customer ID</th>
                <td>@Model.CustomerID</td>
            </tr>
            <tr>
                <th>Company Name</th>
                <td>@Model.CompanyName</td>
            </tr>
            <tr>
                <th>Contact Name</th>
                <td>@Model.ContactName</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>@Model.Country</td>
            </tr>
        </table>
    }
    else
    {
        <p>No customer found for the given Order ID.</p>
    }
</body>
</html>
